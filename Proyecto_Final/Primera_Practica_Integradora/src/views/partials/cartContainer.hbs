<div class="tipografia">
    <div class="container">
        <div class="col-4 fw-bold fs-3 fontColor">
            CARRITO N°: {{cart.idCart}}
        </div>
    </div>
    
    <h3 class="p-3 fw-bold fontColor">PRODUCTOS</h3>

    <div class="container-fluid fontColor">
        {{#if pExist}}
            <table class="table">
                <thead class="">
                    <tr class="text-center fontColor">
                        <th>ID Producto</th>
                        <th>Cantidad</th>
                        <th>Nombre del producto</th>
                        <th>Descripción</th>
                        <th>Código</th>
                        <th>Imagen</th>
                        <th>Precio</th>
                        {{!-- <th></th>  --}}   
                    </tr>
                </thead>
                <tbody>
                    {{#each cart.products}}  
                        <tr class="text-center align-middle fontColor">
                            <td>
                                {{this.id}}
                            </td>
                            <td>
                                {{this.quantity}}
                            </td>
                            <td>
                                {{this.title}}
                            </td>
                            <td>
                                {{this.description}}
                            </td>
                            <td>
                                {{this.code}}
                            </td>
                            <td>
                                <img class="rounded mx-auto d-block imagenProducto" src={{this.thumbnail}}>
                            </td>
                            <td>
                                {{this.price}}
                            </td>
                            {{!-- <td>
                                <div class="col-2">
                                    <form class="container" action="/api/carts/deleteProduct/{{this.id}}" method="post">
                                        <input name="idCart" value={{cart.idCart}}>
                                        <button type="submit" class="btn btn-danger m-2 col">X</button>
                                    </form>
                                </div>
                            </td> --}}
                        </tr>
                    {{/each}}
                </tbody>
            </table>

        {{else}}
            <div class="container-fluid">
                <h4 class="alert alert-danger">No hay productos</h4>
            </div> 
        {{/if}}
    </div>

</div>
