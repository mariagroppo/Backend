<main>
        <a href="/api/products/addNewProduct" class="btn btn-primary" role="button">Agregar producto</a>
        <h4 class="p-3 fw-bold tipografia">Lista de productos</h4>

        {{#if productsExists}}
            <div class="d-flex flex-wrap justify-content-around">
                {{#each prods}}
                <div class="card shadow m-2" style="width: 18rem;">
                    <a href="/api/products/{{this.id}}" class="position-relative"><span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-secondary">{{this.id}}</span><img src="{{this.thumbnail}}" class="card-img-top" alt="{{this.title}}"></a>
                    <div class="card-body">
                        <div class="container">
                            <div class="d-flex flex-wrap justify-content-between">
                                <div class="col align-self-center">
                                    <h5 class="card-title">{{this.title}}</h5>
                                </div>
                                <div class="col-2">
                                    <form class="container" action="/api/products/delete/{{this.id}}" method="post">
                                        <input type="hidden" name="id" value={{this.id}}>
                                        <button type="submit" class="btn btn-danger m-2 col">X</button>
                                    </form>
                                </div>
                                <div class="col-2">
                                    <form class="container" action="/api/products/update/{{this.id}}" method="get">
                                        <input type="hidden" name="id" value={{this.id}}>
                                        <button type="submit" class="btn btn-primary m-2 col">Up</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <span class="badge bg-secondary">STOCK: {{this.stock}}</span>
                        <p class="card-text">{{this.description}}</p>
                        <div class="d-flex flex-wrap justify-content-between">
                            <p class="card-text"><b>$ {{this.price}}</b></p>
                            <span class="badge bg-success align-self-center">{{this.category}}</span>
                        </div>
                        <div>
                            <div class="d-flex">
                                <div class="col-2">
                                    <form class="d-flex" action="/api/carts/addProductInCart/:{{this.id}}" method="post">
                                        <input type="hidden" name="id" value={{this.id}}>
                                        <label class="m-2">Carrito</label>
                                        <input class="" type="number" name="idCart" id="idCart">
                                        <button type="submit" class="btn btn-primary m-2 col">+</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        
                        
                    </div>
                </div>
                {{/each}}
            </div>

        {{else}}
            <div class="container-fluid">
                <h4 class="alert alert-danger">No se encontraron productos</h4>
            </div>
        {{/if}}
    </div>
</main>
